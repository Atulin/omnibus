{% extends './scaffolds/public_scaffold.twig' %}

{% block body %}

    <div class="v-centered h-centered v-full h-full container">

        <form class="form" id="login" method="POST" @submit="checkForm">

            <div id="messages">

                {% if message %}
                    <div class="success timed message field">
                        <p>{{ message }}</p>
                    </div>
                {% endif %}

                <div class="error message field" v-if="errors.length">
                    <b>Please correct the following error(s):</b>
                    <ul>
                        <li v-for="error in errors">${ error }</li>
                    </ul>
                </div>

                {% if messages %}
                    <div class="error message field" v-if="!errors.length">
                        <b>Please correct the following error(s):</b>
                        <ul>
                            {% for m in messages %}
                                <li>{{ m }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>

            <div class="field">
                <label for="login">Login</label>
                <input type="text" name="login" id="login" v-model="login" required>
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" v-model="pass" required>
            </div>

            <div class="checkbox field">
                <label for="remember">Remember me</label>
                <input id="remember" name="remember" v-model="remember" type="checkbox">
            </div>

            <input id="token" type="hidden" name="token" value="{{ token }}">

            <div class="field">
                <label for="submit" class="hidden">Log in</label>
                <input id="submit" class="submit button" type="submit" value="Log in">
            </div>

        </form>

    </div>

    <script>
        const app = new Vue({
            delimiters: ['${', '}'],
            el: '#login',
            data: {
                errors: [],
                login: null,
                pass: null,
                remember: null
            },
            methods: {
                checkForm: function(e) {
                    this.errors = [];

                    if (!this.login) {
                        this.errors.push('Name required.');
                    }
                    if(!this.pass) {
                        this.errors.push('Password required.')
                    }

                    if (this.errors.length <= 0) return true;

                    e.preventDefault();
                }
            }
        })
    </script>

{% endblock %}
