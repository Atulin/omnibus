{% extends "scaffolds/public_scaffold.twig" %}

{% block body %}
    <div>{{ theme }}</div>
    <div>{{ token }}</div>
    <div>{{ user.name }}</div>
    <div>{{ user.code ? "inactive" : "active" }}</div>
    <div>{{ message }}</div>
    <div>Active: {{ active ? "true" : "false" }}</div>

    {% if user %}
        <a href="/logout">Log out</a>
        <img src="{{ gravatar(user.email) }}" alt="{{ user.name }}'s avatar">
    {% else %}
        <a href="/login">Log in</a>
        <a href="/register">Register</a>
    {% endif %}

{% endblock %}
