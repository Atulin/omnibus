<div id="navbar">

    <div class="brand">
        <a href="/">Website title</a>
    </div>

    <div class="hamburger">
        <i class="fas fa-bars">H</i>
    </div>

    <nav class="items">

        <hr>

        <div class="item">
            <a href="#">Longer Link</a>
        </div>

        <hr>

        <div class="item">
            Longer Link
        </div>

        <hr>

    </nav>

    <nav class="right items">

        <hr>

        <div class="dropdown" aria-haspopup="true">
            <div class="item">
                <p>{{ theme }}</p>
            </div>
            <div class="dropdown-content">
                <a class="dropdown-item" href="#">Dark</a>
                <a class="dropdown-item" href="#" >Light</a>
            </div>
        </div>

        <hr>

        {% if user %}

            <div class="dropdown" aria-haspopup="true">
                <div class="avatar item">
                    <p>{{ user.name }}</p>
                    <img src="{{ gravatar(user.email, 40) }}" alt="{{ user.name }}'s avatar">
                </div>
                <div class="dropdown-content">
                    <a class="dropdown-item" href="/profile">Profile</a>
                    <a class="dropdown-item" href="/logout" >Logout</a>
                </div>
            </div>

        {% else %}

            <div class="item">
                <a href="/register">Register</a>
            </div>

            <hr>
            <div class="item">
                <a href="/login">Login</a>
            </div>

        {% endif %}

    </nav>

</div>
