<div id="comments" class="container">

    {#====================#}
    {#    COMMENT FORM    #}
    {#====================#}

    <form method="post" @submit.stop.prevent="sendComment" xmlns:v-bind="http://www.w3.org/1999/xhtml">
        <input id="token" type="hidden" name="token" value="{{ token }}">
        <input id="thread" type="hidden" name="thread" value="{{ thread }}">

        <div class="comment-box">

            <div class="main">
                <p class="error" v-bind:class="{ active: error }">${ error }</p>

                <label for="body" class="hidden">Comment body</label>
                <textarea name="body" id="body" rows="10" v-model="comment_body"></textarea>
            </div>

            <div class="bottom">
                <div class="counter">${charsLeft}</div>

                <button class="send" @click="sendComment">>>></button>
            </div>

        </div>
    </form>

    {#=====================#}
    {#    BOX O'COMMENTS   #}
    {#=====================#}

    <div class="comments-list">

        {# Comments shown by JS #}
        <div class="comment" v-for="c in comments_list">

            <div class="head">
                <div class="author">${c.user}</div>
                <div class="date item">${c.date}</div>
            </div>
            <div class="body" v-html="c.body"></div>
            <div class="meta">
                <div class="id item">
                    >>${c.id}
                </div>
                <div class="buttons">
                    <button class="item">R</button>
                </div>
            </div>

        </div>

        {# Comments shown by default #}
        {% for c in comments %}
            <div class="comment" v-if="comments_list.length <= 0">
                <div class="head">
                    <div class="author">{{ c.user }}</div>
                    <div class="date item">{{ c.date }}</div>
                </div>
                <div class="body">{{ c.body|raw }}</div>
                <div class="meta">
                    <div class="id item">
                        >>{{ c.id }}
                    </div>
                    <div class="buttons">
                        <button class="item">R</button>
                    </div>
                </div>
            </div>
        {% endfor %}


    </div>

</div>

<script type="application/javascript" src="{{ vasset('js/v-comments', 'min.js') }}"></script>
